{
  "name": "about-me",
  "version": "0.0.1",
  "description": "Site de pr√©sentation personnel",
  "main": "dist/index.html",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./tmp && mkdir ./tmp && mkdir -p ./dist/img",
    "copy:img": "cp ./src/img/* ./dist/img/",
    "copy:robots": "cp ./src/robots.txt ./dist/",
    "copy": "npm run copy:img && npm run copy:robots",
    "style": "./node_modules/.bin/lessc ./src/css/style.less | cat ./node_modules/normalize.css/normalize.css - | ./node_modules/.bin/cleancss -o ./tmp/style.css",
    "mustache": "./node_modules/js-index-builder/index.js -t \"src/html/**/*.html\" -b `git log --pretty=format:'%h' -n 1` -p \"src/partials/*.html\" -c ./tmp/style.css -o ./tmp",
    "html-minify": "./node_modules/.bin/html-minifier --config-file ./html-minifier.json --input-dir ./tmp --output-dir ./dist",
    "html": "npm run mustache && npm run html-minify",
    "structure": "./node_modules/js-index-builder/sitemap.js -j \"src/html/**/*.json\" -s ./dist/sitemap.xml",
    "build": "npm run clean && npm run copy && npm run style && npm run structure && npm run html"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/about-me.git"
  },
  "keywords": [],
  "author": "Vincent Boutour",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ViBiOh/about-me/issues"
  },
  "homepage": "https://github.com/ViBiOh/about-me",
  "devDependencies": {
    "clean-css-cli": "latest",
    "html-minifier": "latest",
    "js-index-builder": "git+https://github.com/ViBiOh/js-index-builder.git",
    "less": "latest",
    "normalize.css": "latest"
  },
  "dependencies": {}
}
